<%- include('partials/header') %>
<h2>Edit <%= type %></h2>
<form action="/<%= type %>/<%= item._id %>?_method=PUT" method="POST">
  Name: <input type="text" name="name" value="<%= item.name %>"><br>
  <% if(type === 'supplier'){ %>
    Address: <input type="text" name="address" value="<%= item.address %>"><br>
    Phone: <input type="text" name="phone" value="<%= item.phone %>"><br>
  <% } else { %>
    Price: <input type="number" name="price" value="<%= item.price %>"><br>
    Quantity: <input type="number" name="quantity" value="<%= item.quantity %>"><br>
    Supplier: 
    <select name="supplierId">
      <% suppliers.forEach(s => { %>
        <option value="<%= s._id %>" <%= s._id.toString() === item.supplierId?.toString() ? "selected" : "" %>><%= s.name %></option>
      <% }) %>
    </select><br>
  <% } %>
  <button type="submit">Update</button>
</form>
<%- include('partials/footer') %>
